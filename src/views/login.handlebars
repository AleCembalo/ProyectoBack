<style>
    body {
        background-color: hsl(217, 54%, 11%);
    }

    header {
        height: 100px;
        padding: 0px 30px;
        border-bottom: 2px solid hsl(216, 50%, 16%);
        box-shadow: 0px 5px 20px hsl(0, 0%, 100%);
    }

    @media only screen and (min-width:660px){
        header {
            padding: 10px 70px 0px 50px;
        }
    }

    @media only screen and (min-width:960px){
        header {
            padding: 10px 100px 0px 100px;
            height: 150px;
        }
    }
    
    .navbar{
        font-size: 25px;
    }

    a{
        color: hsl(215, 50%, 70%);
    }

    .logo {
        color: hsl(215, 50%, 70%);
        font-size: 22px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    @media only screen and (min-width:960px){
        .logo {
            font-size: 32px;
        }
    }

    .carrito {
        font-size: 25px;
        position: relative;
    }

    @media only screen and (min-width:660px){
        .carrito{
            font-size: 30px;
        }
    }

    @media only screen and (min-width:960px){
        .carrito {
            font-size: 40px;
        }
    }

    button {
        background-color: hsl(217, 54%, 11%);
        padding: 5px 10px;
        border: none;
    }

    i{
        position: absolute;
        top:10px;
        right: 0px;
    }

    span{
        font-size: 12px;
        color: hsl(217, 54%, 11%);
        font-weight: bold;
        position: absolute;
        top:10px;
        right: 10px;
    }

    @media only screen and (min-width:960px){
        span{
            font-size: 18px;
            top:10px;
            right: 15px;
        }
    }

    .collapse{
        justify-content: right;
        padding-top: 25px;
    }

    .dropdown-menu{
        background-color: hsl(217, 54%, 11%);
        border-color: hsl(215, 50%, 70%);
    }

    .login-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
        padding: 32px;
        border-radius: 0.5em;
        color: #333;
        border: 1px solid #bbb;
        background-color: #ccc;
    }

    .a2 {
        color: #333;
    }

    .a2:hover {
        color: #000;
    }

    .submit_btn {
        width: 160px;
    }
</style>

    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a id="inicio" class="navbar-brand botonMenu logo" href="">Chemba</a>
                <div class="carrito">
                    <button>
                        <i class="fa-solid fa-cart-shopping" style="color: #8bacda;"></i>
                        <span id="numerito" class="numerito">0</span>
                    <button>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span><i class="fa-solid fa-bars fa-spin fa-spin-reverse" style="color: #8bacda;"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="herramientas" class="nav-link botonMenu" href="#" style="color: #8bacda;">Herramientas</a>
                        </li>
                        <li class="nav-item">
                            <a id="fontaneria" class="nav-link botonMenu" href="#" style="color: #8bacda;">Fontanería</a>
                        </li>
                        <li class="nav-item">
                            <a id="electricidad" class="nav-link botonMenu" href="#" style="color: #8bacda;">Electricidad</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="login-container">
        <h2><b>Login de usuario</b></h2>

        <form action="/api/auth/sessionlogin" method="post" style="margin-top: 32px;">
            <div class="input-group" style="width: 300px; margin-bottom: 32px;">
                <span class="input-group-text" id="group1"><i class="fa-solid fa-user"></i></span>
                <input type="email" name="email" class="form-control" placeholder="Nombre" required="required" autofocus="autofocus">
            </div>

            <div class="input-group" style="width: 300px; margin-bottom: 32px;">
                <span class="input-group-text" id="group2"><i class="fa-solid fa-lock"></i></span>
                <input type="current-password" name="password" class="form-control" required="required">
            </div>

            {{#if showError}}
                <div class="alert alert-danger" role="alert" style="margin-top: 16px;">
                    {{ errorMessage }}
                </div>
            {{/if}}

            <button type="submit" class="btn btn-success submit_btn">Ingresar</button>
            <br><br>
            <button class="btn btn-info submit_btn" onclick="window.location.replace('/api/auth/ghlogincallback')">Github</button>

            <div style="margin-top: 24px;">
                No tenés cuenta?: <a class="a2" href="/register">Registrate</a>
            </div>
        </form>
    </div>
